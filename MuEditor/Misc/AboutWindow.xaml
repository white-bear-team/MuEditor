<Window x:Class="MuEditor.Misc.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuEditor.Misc"
        mc:Ignorable="d"
        Title="AboutWindow" Height="240" Width="300" ResizeMode="NoResize" Icon="../Icons/editor.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"></ColumnDefinition>
            <ColumnDefinition Width="150*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Image HorizontalAlignment="Center" Height="100" VerticalAlignment="Center" Width="100" Source="/MuEditor;component/Icons/SanoranX.jpg"/>
        </Grid>

        <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Developed by SanoranX" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="For MUNO" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>
            <Label Content="2021" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0"/>
        </Grid>
    </Grid>
    
</Window>
